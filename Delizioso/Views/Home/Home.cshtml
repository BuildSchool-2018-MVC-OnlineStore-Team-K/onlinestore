<hr>

<!--加入購物車-->
<div id="加入購物車" class="w3-modal">
    <div class="w3-modal-content w3-card-4 w3-animate-top">
        <header class="w3-container w3-theme-l1">
            <span onclick="document.getElementById('加入購物車').style.display='none'" class="w3-button w3-display-topright">×</span>
            <h3>加入購物車</h3>
        </header>
        <div class="w3-padding">
            <div class="w3-card w3-container" style="min-height:150px">
                <br>
                <div class="container">
                    <div class="row">
                        <img src="https://s9.postimg.cc/fd3rfy0jj/jeans3.jpg" width="150" height="180">
                        <div class="col-7">
                            <h3>Mega Ripped Jeans </h3>
                            <button class="shopee-button-outline">
                                -
                            </button>
                            <input class="shopee-button-outline shopee-button-outline-mid" type="text" value="1" style="width: 130px">
                            <button class="shopee-button-outline-mid">
                                +
                            </button>
                            </br>
                            </br>
                            <label for="Size">Size:</label>
                            <select id="Size" name="Size">
                                <option value="xs">XS</option>
                                <option value="s">S</option>
                                <option value="m">M</option>
                                <option value="l">L</option>
                                <option value="xl">XL</option>
                            </select>
                            <label for="Color">Color:</label>
                            <select id="Color" name="Color">
                                <option value="Red">Red</option>
                                <option value="Bule">Bule</option>
                                <option value="Black">Black</option>
                                <option value="Yellow">Yellow</option>
                            </select>
                            </br>
                            <h4><b>$19.99</b></h4>
                        </div>
                    </div>
                    </br>
                    <center>
                        <button class="w3-button w3-black" style="widows:150px">
                            購買
                            <i class="fa fa-shopping-cart"></i>
                        </button>
                        <span onclick="document.getElementById('加入購物車').style.display='none'" class="w3-button w3-black">繼續購物<i class="fa fa-shopping-cart"></i></span>
                    </center>
                </div>
                <BR>
            </div>
        </div>
        <footer class="w3-container w3-theme-l1">
            <p>
                祝您購物愉快
                <i class="fa fa-smile-o"></i>
            </p>
        </footer>
    </div>
</div>

