                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

            <br />

            <div id="centerHTML" class="container-fluid">
                <div class="row" style="background-color:#bbded6; ">
                    <div class="col-3">
                        <hr align="left" color="#000" size="1">
                    </div>
                    <div class="col-6">
                        <font face="Arial, Helvetica, sans-serif">
                            <h4 size="5">熱銷商品</h4>
                        </font>
                    </div>
                    <div class="col-3">

                        <hr align="right" color="#000" size="1">
                    </div>
                </div>
            </div>


            <div id="bottombanner" onload="TopSale()">
                <div class="alltopsale">
                    <!-- 長在alltopsale底下 -->
                    @foreach (var i in @Model)
                    {
                        <div class="hot-product">
                            <div class="hot-pic">
                                <a href="~/product/@i.ProductID">
                                    <img src="~/Content/Delizioso_files/Images/Hot-1.jpg" width="200px" height="256px">
                                </a>
                            </div>
                            <div class="hot-name">
                                <span class="sname">@i.ProductName</span>
                            </div>
                            <div class="hot-price">
                                <span class="sprice">NT$@i.UnitPrice</span>
                            </div>
                        </div>
                    }
                </div>
            </div>


            <script language="javascript">
                $(function () {
                    $(".topsale").each(function () {
                        TopSale('');
                    });
                    $(".topsale").click(function () {
                        var arrData = $(this).data('val')
                        TopSale(arrData);
                    });
                })

                function TopSale(arrData) {
                    $.ajax({
                        type: 'post',
                        url: "inc/ajaxBannertopsale.asp?PP100=" + arrData,
                        data: arrData,
                        dataType: "text",
                        async: false,
                        success: function (data) {
                            $('.alltopsale').html(data);
                        },
                        // error: function (xhr, ajaxOptions, thrownError) { alert("getImgCount error:" + xhr.responseText); }
                    })
                }
            </script>

            <div id="centerHTML" class="container-fluid">
