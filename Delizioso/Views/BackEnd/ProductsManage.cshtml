
@{
    ViewBag.Title = "ProductsManage";
    Layout = "~/Views/Shared/BackEnd_Layout.cshtml";
}
    
<!-- Header-->
<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>儀表板</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li>
                        <a href="#">儀表板</a>
                    </li>
                    <li class="active">產品管理</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="content">
    <!-- Example single danger button -->
    <div class="btn-group mb-2">
        <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            新增產品
        </button>
        <div class="dropdown-menu">
            <a class="dropdown-item" href="#">新增產品</a>
            <a class="dropdown-item" href="#">更改產品</a>
            <a class="dropdown-item" href="#">刪除產品</a>
        </div>
    </div>
    <div class="row">
        <div class="col-2">
            <div class="input-group mb-2">
                <select class="custom-select">
                    <option selected>產品類別</option>
                    <option value="1">上衣</option>
                    <option value="2">短褲</option>
                    <option value="3">長褲</option>
                </select>
            </div>
        </div>
        <div class="col-2">
            <div class="input-group mb-2">
                <input type="text" class="form-control" placeholder="請輸入產品名稱" aria-label="Recipient's username" aria-describedby="basic-addon2">
            </div>
        </div>
        <div class="col-2">
            <div class="input-group mb-2">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                <input type="text" class="form-control" placeholder="請輸入產品價格" aria-label="Amount (to the nearest dollar)">
            </div>
        </div>
        <div class="col">
            <div id="size" class="col-4">
                <div class="input-group mb-2">
                    <select class="custom-select">
                        <option selected>產品尺寸</option>
                        <option value="1">S</option>
                        <option value="2">M</option>
                        <option value="3">L</option>
                    </select>
                </div>
            </div>
            <div id="color" class="col-4">
                <div class="input-group mb-2">
                    <select class="custom-select">
                        <option selected>產品顏色</option>
                        <option value="1">紅</option>
                        <option value="2">黃</option>
                        <option value="3">藍</option>
                    </select>
                </div>
            </div>
            <div id="stock" class="col-4">
                <div class="input-group mb-2">
                    <input type="text" class="form-control" placeholder="請輸入產品庫存" aria-label="Recipient's username" aria-describedby="basic-addon2">
                </div>
            </div>
            <button type="button" id="plus" class="btn btn-secondary btn-lg btn-block">+</button>
            <button type="button" id="send" class="btn btn-primary btn-lg btn-block">送出</button>
        </div>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("#plus").click(function () {
            $("#size").append('<div class="input-group mb-2">' +
                '<select class="custom-select" >' +
                '<option selected>產品尺寸</option>' +
                '<option value="1">S</option>' +
                '<option value="2">M</option>' +
                '<option value="3">L</option>' +
                '</select>' +
                '</div>');
            $("#color").append('<div class="input-group mb-2">' +
                '<select class="custom-select" >' +
                '<option selected>產品顏色</option>' +
                '<option value="1">紅</option>' +
                '<option value="2">黃</option>' +
                '<option value="3">藍</option>' +
                '</select>' +
                '</div>');
            $("#stock").append('<div class="input-group mb-2">' +
                '<input type="text" class="form-control" placeholder="請輸入產品庫存" aria-label="Recipient\'s username" aria-describedby="basic-addon2">' +
                '</div>');
        });
    })
</script>
