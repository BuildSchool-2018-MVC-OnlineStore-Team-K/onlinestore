                                                                if ($(this).val() == "1") {
                                                                    $("#evatData").show();
                                                                    $("#evatTaxID").hide();
                                                                    ClearVal("#evatTaxID");
                                                                } else {
                                                                    $("#evatTaxID").show();
                                                                    Req("#evatTaxID");
                                                                    $("#evatData").hide();
                                                                    ClearVal("#evatData");
                                                                }
                                                            });

                                                            $("#submit-data").click(function () {
                                                                if ($("#form-data").callProp(
                                                                    'checkValidity')) {
                                                                    if (($("#CompanyTaxID").val() != "") &&
                                                                        (
                                                                            idchk($("#CompanyTaxID").val())
                                                                        ) ==
                                                                        false) {
