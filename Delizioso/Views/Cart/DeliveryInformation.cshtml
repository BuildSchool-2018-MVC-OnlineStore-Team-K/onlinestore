                                                                    $("#selNOPBAN").hide();
                                                                    break;
                                                                case "02":
                                                                    $("#spanCarrierid1,#spanCarrierid2").show();
                                                                    Req("#spanCarrierid1,#spanCarrierid2");
                                                                    $("#selNOPBAN").hide();
                                                                    break;
                                                                case "03":
