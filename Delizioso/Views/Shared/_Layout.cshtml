                    $('#logoimg_b').hide();
                } else {
                    $('#logoimg_b').show();
                    $('#logoimg_s').hide();
                    $('#main_index').css("margin-top", $('#headerBlock').outerHeight() + 12);
                    $('#main').css("margin-top", $('#headerBlock').outerHeight() + 12);
                }
